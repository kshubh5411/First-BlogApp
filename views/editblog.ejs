<% include partials/header.ejs %>
<link rel="stylesheet"  type="text/css" href="/stylesheets/app.css">

<div class="container">
    <h1>Edit <%=blog.title%> </h1>
  <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    <div class="form-group">
         <label for="title">Title:</label>
         <input type="text" class="form-control" value="<%=blog.title%>" name="blog[title]">
    </div>
    <div class="form-group">
         <label for="image url">Image Url:</label>
        <input type="text" class="form-control"name="blog[image]" value="<%=blog.image%>">
    </div>
    <label for="Blogescription">Blog Description:</label>
    <div class="form-group">
         <textarea  id="txtarea" name="blog[body]"  type="text">
            <%=blog.body%>
            </textarea>
    </div>
    <div class="form-group" >
         <input type="submit" class="btn btn-info btn-lg" value="Submit">
    </div>
  </form>
    
</div>